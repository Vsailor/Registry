<UserControl x:Class="Registry.UI.UserControls.Themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registry.UI.UserControls"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid MinWidth="900"  HorizontalAlignment="Center" VerticalAlignment="Top" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontSize="16">Введіть назву группи для пошуку:</TextBlock>
                            <TextBox Name="ThemeFilterTextBox" Grid.Row="1" TextChanged="ThemeFilterTextBox_OnTextChanged" FontSize="16"></TextBox>
                            <ListView Name="GroupsListBox" Grid.Row="2" Margin="0,10,0,0" MaxHeight="200" SelectionChanged="GroupsListBox_OnSelectionChanged" FontSize="16">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Width="500" Header="Назва" DisplayMemberBinding="{Binding Path=Name}"></GridViewColumn>
                                            <GridViewColumn Width="200" Header="Власник" DisplayMemberBinding="{Binding Path=Login}"></GridViewColumn>
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" FontSize="16">Назва групи:</TextBlock>
                    <TextBox IsEnabled="False" Grid.Row="1" Name="GroupNameTextBox" TextChanged="GroupNameTextBox_OnTextChanged" FontSize="16"></TextBox>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button IsEnabled="False" Height="30" Grid.Column="0" Margin="0, 10, 10, 10" Name="DeleteGroup" Click="DeleteGroup_OnClick" FontSize="16">Видалити</Button>
                        <Button IsEnabled="False"  Height="30" Grid.Column="1" Margin="10, 10, 0, 10" Name="UpdateGroup" Click="UpdateGroup_OnClick" FontSize="16">Зберегти</Button>
                    </Grid>
                    <TextBlock Grid.Row="3" FontSize="16">Назва нової групи ресурсів:</TextBlock>
                    <TextBox Grid.Row="4" Name="NewGroupTextBox" TextChanged="NewGroupTextBox_OnTextChanged" FontSize="16"></TextBox>
                    <Grid Grid.Row="5">
                        <Button Name="AddGroupButton" IsEnabled="False" Height="30" Margin="10" Width="200" Click="AddGroupButton_OnClick" FontSize="16">Створити нову групу ресурсів</Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Button Margin="10" Width="100" Height="30" Name="BackButton" Click="BackButton_Click" FontSize="16">Назад</Button>
        </Grid>
    </Grid>
</UserControl>
