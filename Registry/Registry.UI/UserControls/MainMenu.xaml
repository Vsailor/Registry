<UserControl x:Class="Registry.UI.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registry.UI.UserControls"
             mc:Ignorable="d" >
    <Grid VerticalAlignment="Center" MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <GroupBox MaxWidth="200">
                <GroupBox.Header>
                    Користувачі системи
                </GroupBox.Header>
                <StackPanel>
                    <Button Name="ChangeUserButton" Margin="0,10,0,0" MaxWidth="150" Click="ChangeUserButton_Click">Всі користувачі</Button>
                    <Button Name="UserGroupsButton" Margin="0,10,0,0" MaxWidth="150" Click="UserGroupsButton_OnClick">Групи користувачів</Button>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <GroupBox  MaxWidth="200">
                <GroupBox.Header>
                    Робота з ресурсами
                </GroupBox.Header>
                <StackPanel>
                    <Button Name="CategoriesButton" MaxWidth="150" Margin="0,10,0,0" Click="CategoriesButton_Click">Категорії ресурсів</Button>
                    <Button Name="ThemesButton"  MaxWidth="150" Margin="0,10,0,0" Click="ThemesButton_OnClick">Групи ресурсів</Button>
                    <Button Name="ResourcesButton" MaxWidth="150" Margin="0,10,0,0" Click="ResourcesButton_OnClick">Ресурси</Button>
                </StackPanel>
            </GroupBox>
        </Grid>

        
    </Grid>
</UserControl>
