<UserControl x:Class="Registry.UI.UserControls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registry.UI.UserControls"
             mc:Ignorable="d" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Login:</TextBlock>
        <TextBox Grid.Row="1" Margin="0,10,0,10" Name="LoginTextBox">admin</TextBox>
        <TextBlock Grid.Row="2">Password:</TextBlock>
        <PasswordBox Grid.Row="3" Margin="0,10,0,10" Name="PasswordTextBox" Password="admin"></PasswordBox>
        <Button Name="SignInButton" Grid.Row="4" Click="SignInButton_Click">Sign in</Button>
    </Grid>
</UserControl>
