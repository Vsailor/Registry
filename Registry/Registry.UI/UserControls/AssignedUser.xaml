<UserControl x:Class="Registry.UI.UserControls.AssignedUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registry.UI.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid  Name="AssignUserGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="UserTextBlock" Grid.Column="0" FontWeight="Bold"></TextBlock>
            <ComboBox  Name="RoleCombobox" SelectionChanged="RoleCombobox_OnSelectionChanged"  Grid.Column="1" Width="80" Margin="10,0,10,0"></ComboBox>
            <Button Grid.Column="2" Width="20" BorderBrush="{x:Null}" Name="DeleteUser" Click="DeleteUser_OnClick"  Style="{StaticResource SimpleButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Registry.UI;component/Resources/Images/icon_delete.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            
        </Grid>
    </Grid>
</UserControl>
