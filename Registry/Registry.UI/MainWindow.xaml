<Window x:Class="Registry.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registry.UI"
        mc:Ignorable="d"
        Title="Registry of information resources" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <Grid Name="MainGrid"></Grid>
        </ScrollViewer>
        <ProgressBar Name="MainProgressBar" Height="20" Grid.Row="1" Visibility="Collapsed" IsIndeterminate="True"></ProgressBar>
    </Grid>
</Window>
